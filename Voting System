// Initialize poll as a Map
const poll = new Map();

// Function to add an option
function addOption(option) {
  if (!option || option.trim() === "") {
    return "Option cannot be empty.";
  }
  if (poll.has(option)) {
    return `Option "${option}" already exists.`;
  }
  poll.set(option, new Set());
  return `Option "${option}" added to the poll.`;
}

// Function to vote
function vote(option, voterId) {
  if (!poll.has(option)) {
    return `Option "${option}" does not exist.`;
  }
  const voters = poll.get(option);
  if (voters.has(voterId)) {
    return `Voter ${voterId} has already voted for "${option}".`;
  }
  voters.add(voterId);
  return `Voter ${voterId} voted for "${option}".`;
}

// Function to display results
function displayResults() {
  let result = "Poll Results:\n";
  for (const [option, voters] of poll.entries()) {
    result += `${option}: ${voters.size} votes\n`;
  }
  return result.trim();
}

// Add at least three options
addOption("Turkey");
addOption("Morocco");
addOption("Malaysia");
addOption("Algeria"); // Optional extra

// Cast at least three votes
vote("Turkey", "traveler1");
vote("Turkey", "traveler2");
vote("Morocco", "traveler3");
vote("Malaysia", "traveler1");
vote("Algeria", "traveler1"); // Duplicate test
vote("Algeria", "traveler1"); // Should not increase vote count
