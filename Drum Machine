<script src="script.js">
const soundNames = {
  Q: "Sci-Fi Whoosh",
  W: "Magic Spell Impact",
  E: "Relaxing Guitar Loop",
  A: "Creepy Dark Logo",
  S: "Riser Wildfire",
  D: "Riser Hit",
  Z: "Design Elements",
  X: "Reliable Safe",
  C: "Descent Whoosh"
};

function playSound(key) {
  const audio = document.getElementById(key);
  if (audio) {
    audio.currentTime = 0;
    audio.play();
    document.getElementById("display").innerText = soundNames[key];
  }
}

document.querySelectorAll(".drum-pad").forEach(pad => {
  pad.addEventListener("click", () => {
    const key = pad.innerText.trim();
    playSound(key);
  });
});

document.addEventListener("keydown", e => {
  const key = e.key.toUpperCase();
  if (soundNames.hasOwnProperty(key)) {
    playSound(key);
  }
});
</script>
